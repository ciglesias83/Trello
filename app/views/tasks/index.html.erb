<h1><%= t('Listing tasks') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('Title') %></th>
      
      <th><%= t('Duration') %></th>
      <th><%= t('Start date') %></th>
      <th><%= t('End date') %></th>
      <th><%= t('Member') %></th>
      <th><%= t('Checklist') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        
        <td><%= task.duration %></td>
        <td><%= task.start_date %></td>
        <td><%= task.end_date %></td>
        <td><%= task.member.fullname %></td>
        <td> <%  if task.checklist %>
              <%= t('Finished') %>
              <% else%>
              <%= t('Pending') %>
              <% end%>
        </td>
        <td><%= link_to t('Show'), task %></td>
        <td><%= link_to t('Edit'), edit_task_path(task) %></td>
        <td><%= link_to t('Destroy'), task, method: :delete, data: { confirm: t('Are you sure?') } %></td>
      </tr>
      
    <% end %>
  </tbody>
</table>

