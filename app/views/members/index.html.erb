<h1><%= t('Listing members') %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Lastname</th>
      <th>Username</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.name %></td>
        <td><%= member.lastname %></td>
        <td><%= member.member_username %></td>
        <td><%= member.email %></td>
        <td><%= link_to t('Show'), member %></td>
        <td><%= link_to t('Edit'), edit_member_path(member) %></td>
        <td><%= link_to t('Destroy'), member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
